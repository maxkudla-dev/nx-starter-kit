{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "types": ["node", "aws-lambda"],
    "typeRoots": ["./apps/api/node_modules/@types", "./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["apps/**/*.ts", "apps/**/scripts/**/*.js", "libs/**/*.ts"],
  "exclude": ["node_modules", "dist", "apps/**/dist", "libs/**/dist"]
}
